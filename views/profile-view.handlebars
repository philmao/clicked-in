<div class="main main-raised">
    <div class="section profile-view">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <img src="{{profile.img_url}}" alt="" class="img-circle img-raised view-profile-img">
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    {{> profile-view-parts/name-title}}
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-2 col-sm-offset-3 col-xs-4">
                    <h4>Front-End Skills</h4>
                    {{#listFront skills}}
                        {{this}}
                    {{/listFront}}
                    </ul>
                </div>
                <div class="col-sm-2 col-xs-4 is-flexed-right">
                    <span>
                        <h4>Back-End Skills</h4>
                        {{#listBack skills}}
                            {{this}}
                        {{/listBack}}
                    </span>
                </div>
                <div class="col-sm-2 col-xs-4 is-flexed-right">
                    <span>
                        <h4>Design Skills</h4>
                        {{#listDesign skills}}
                            {{this}}
                        {{/listDesign}}
                    </span>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-12">
                    <h4>About {{profile.name}}:</h4>
                    <p>
                        {{profile.about}}
                    </p>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-12">
                    <h4>Links:</h4>
                    <ul class="list">
                        <li><a href="{{profile.linkedin_url}}">{{profile.linkedin_url}}</a></li>
                        <li><a href="{{profile.github_url}}">{{profile.github_url}}</a></li>
                        <li><a href="{{profile.personal_url}}">{{profile.personal_url}}</a></li>
                    </ul>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-12">
                    <h4>Projects:</h4>
                    {{#each projects}}
                        <div class="col-md-4">
                            <a href="#" class="project-link" data-toggle="modal" data-target="#{{this.id}}">
                                <h5 class="text-center">{{this.name}}</h5>
                                <img src="{{this.img_url}}" alt="" class="img-responsive img-raised project-img">
                            </a>
                        </div>

                        <div id="{{this.id}}" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title">{{this.name}}</h4>
                                    </div>
                                    <div class="modal-body">
                                        <p>{{this.description}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>


                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
